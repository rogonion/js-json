{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@internal": [
        "./src/__internal__"
      ],
      "@core": [
        "./src/core"
      ],
      "@object": [
        "./src/object"
      ],
      "@path": [
        "./src/path"
      ],
      "@schema": [
        "./src/schema"
      ],
      "@schemapath": [
        "./src/schemapath"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
